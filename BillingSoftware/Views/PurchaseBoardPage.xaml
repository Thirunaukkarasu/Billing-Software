<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:BillingSoftware.Properties"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="BillingSoftware.Views.PurchaseBoardPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    mc:Ignorable="d"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="636" d:DesignWidth="1073">
    <Page.Resources>
        <!-- Declare the BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"  Margin="{StaticResource MediumLeftRightMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" /> 
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.PurchaseBoardPageTitle}" />

                    <Button Margin="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"  Height="35" Width="150"  Foreground="Black" Background="#D9D9D9" BorderThickness="0" FontFamily="Roboto">
               

                <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="LightGray"></DropShadowEffect>
                        </Button.Effect>
                <Button.Content>
                    <StackPanel  Orientation="Horizontal" Width="150">  
                        <Image Source="../Icons/add.png" HorizontalAlignment="Left" Margin="15 0 10 0" Height="20" Width="15" />
                        <TextBlock Width="100" VerticalAlignment="Center" Margin="0 0 10 0" HorizontalAlignment="Left" FontFamily="Roboto" FontSize="15" Foreground="Black" >Add Purchase</TextBlock>
                    </StackPanel>
                </Button.Content>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#1162FF"/> 
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

            <Button  Margin="3"  Width="150"  Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left"  Height="35"   Foreground="Black" Background="#D9D9D9" BorderThickness="0" FontFamily="Roboto"  >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="LightGray"></DropShadowEffect>
                        </Button.Effect>
                <Button.Content>
                    <StackPanel  Orientation="Horizontal" Width="150">
                        <Image Source="../Icons/add.png" HorizontalAlignment="Left" Margin="15 0 10 0" Height="20" Width="15" />
                        <TextBlock Width="100" VerticalAlignment="Center" Margin="0 0 10 0" HorizontalAlignment="Left" FontFamily="Roboto" FontSize="15" Foreground="Black" >Add Sales</TextBlock>
                    </StackPanel>
                </Button.Content>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#D9D9D9"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

            <Button  Margin="3"   Width="130" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left"  Height="35" Foreground="Black" Background="#D9D9D9" BorderThickness="0" FontFamily="Roboto"  >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="LightGray"></DropShadowEffect>
                        </Button.Effect>
                <Button.Content>
                    <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal" Width="150">
                        <Image Source="../Icons/bill.png" HorizontalAlignment="Left" Margin="30 0 10 0" Height="30" Width="20" />
                        <TextBlock Width="100" VerticalAlignment="Center" Margin="0 0 10 0" HorizontalAlignment="Left" FontFamily="Roboto" FontSize="15" Foreground="Black" >Billing</TextBlock>
                    </StackPanel>
                </Button.Content>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#1162FF"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
        </Grid>
        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            Background="{DynamicResource MahApps.Brushes.Gray10}">
            <!--
            The Mahapps Gray10 color represents where you should place your content.
            Place your content here.
            -->

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"  Margin="5" Background="White" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" /> 
                            <RowDefinition Height="*" /> 
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" /> 
                            <ColumnDefinition Width="*" /> 
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Row="0"  Grid.ColumnSpan="2" Margin="10" Orientation="Horizontal">
                            <ComboBox  ItemsSource="{Binding DateOptions}"  HorizontalAlignment="Left" 
                                SelectedItem="{Binding SelectedDateOption}"  IsEditable="False" 
                                Width="200" Height="30" Margin="5"/>
                            <TextBox   Text="{Binding  SupplierName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                       mah:TextBoxHelper.Watermark="Supplier Name" Width="200" Height="30" Margin="5"  x:Name="SearchSNTextBox" />
                            <TextBox  Text="{Binding InvoiceNumber , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="200" Height="30" Margin="5"  mah:TextBoxHelper.Watermark="Invoice Number"  x:Name="invoiceNoTextBox" />
                            <Button  VerticalAlignment="Center" HorizontalAlignment="Left"  Height="35" Width="100" Background="#1162FF" BorderThickness="0" FontFamily="Roboto"
                  Command="{Binding SearchInvoiceClickedCommand}">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="LightGray"></DropShadowEffect>
                                </Button.Effect>
                                <Button.Content>Search</Button.Content>
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="#1162FF"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
 
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Visibility="{Binding IsCustomDateSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="From:" VerticalAlignment="Center" Margin="5"/>
                            <DatePicker SelectedDate="{Binding StartDate, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5">
                                <DatePicker.Style>
                                    <Style TargetType="DatePicker">
                                        <Style.Triggers>
                                            <Trigger Property="Validation.HasError" Value="True">
                                                <Setter Property="ToolTip" Value="{Binding Path=(Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DatePicker.Style>
                            </DatePicker>
                            <TextBlock Text="To:" VerticalAlignment="Center" Margin="5"/>
                            <DatePicker SelectedDate="{Binding EndDate, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" Width="120" Margin="5">
                                <DatePicker.Style>
                                    <Style TargetType="DatePicker">
                                        <Style.Triggers>
                                            <Trigger Property="Validation.HasError" Value="True">
                                                <Setter Property="ToolTip" Value="{Binding Path=(Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DatePicker.Style>
                            </DatePicker>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Visibility="{Binding IsSpecificDateSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <DatePicker SelectedDate="{Binding SpecificDate, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="5">
                                <DatePicker.Style>
                                    <Style TargetType="DatePicker">
                                        <Style.Triggers>
                                            <Trigger Property="Validation.HasError" Value="True">
                                                <Setter Property="ToolTip" Value="{Binding Path=(Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DatePicker.Style>
                            </DatePicker>
                        </StackPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1"  Margin="5" Background="White" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions> 
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width=".1*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width=".1*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions> 
                       
                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource PaidTileBorderStyle}" >
                            <StackPanel>
                                <TextBlock Text="Paid" FontStyle="Normal" FontFamily="Roboto" FontSize="12" FontWeight="Bold" Margin="15"/>
                                <TextBlock Text="{Binding  AmountPaid, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontSize="18" FontWeight="Bold" Margin="10" />
                            </StackPanel>
                        </Border>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Grid.Column="1" Text="+"></TextBlock>
                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource UnPaidTileBorderStyle}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Margin="15"><Run Language="en-in" Text="UnPaid"/></TextBlock>
                                <TextBlock Text="{Binding  AmountUnPaid, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontSize="18" FontWeight="Bold" Margin="15"/>
                            </StackPanel>
                        </Border>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Grid.Column="3" Text="="></TextBlock>
                        <Border Grid.Row="0" Grid.Column="4"  Style="{StaticResource TotalTileBorderStyle}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Margin="15"><Run Language="en-in" Text="Total Amount"/></TextBlock>
                                <TextBlock Text="{Binding  TotalAmount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontSize="18" FontWeight="Bold" Margin="15"/>
                            </StackPanel>
                        </Border>

                        <!--<Border Grid.Row="0" Grid.Column="4" Style="{StaticResource NoOfItemsTileBorderStyle}">
             <StackPanel>
                 <TextBlock FontWeight="Bold" Margin="15"><Run Language="en-in" Text="No Of  Items"/></TextBlock>
                 <TextBlock Text="Content for Tile 1" Margin="15"/>
             </StackPanel>
         </Border>-->
                    </Grid>
                </Grid>
                <Grid Grid.Row="2" Background="White" Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <!--<RowDefinition Height="0.5*" />-->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <!--<TextBox  Grid.Column="0" Text="{Binding  SupplierName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource txtSearchPD}" x:Name="SearchSNTextBox" />
                            <TextBlock IsHitTestVisible="False" Text="Supplier Name" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="12,0,0,0" Foreground="DarkGray">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchSNTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border  Height="32" Grid.Column="1" CornerRadius="40" >
                                <DatePicker  SelectedDateFormat="Short" SelectedDate="{Binding InvoiceDate, StringFormat=dd/MM/yyyy,  UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  FirstDayOfWeek="Monday"   VerticalContentAlignment="Center"> 
                                <DatePicker.Resources>
                                    <Style TargetType="TextBox" >
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="BorderBrush"  Value="Red"/>
                                            </Trigger> 
                                        </Style.Triggers>
                                        <Setter Property="IsReadOnly" Value="True"/>
                                        <Setter Property="Background" Value="#E3E3E3"/>
                                        <Setter Property="BorderBrush" Value="#E3E3E3"/>  
                                    </Style> 
                                </DatePicker.Resources>
                                <DatePicker.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="LightGray"></DropShadowEffect>
                                </DatePicker.Effect> 
                            </DatePicker>
                            </Border>
                            <TextBox  Grid.Column="2" Text="{Binding InvoiceNumber , UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Style="{StaticResource txtSearchPD}" x:Name="invoiceNoTextBox" />
                          <TextBlock Grid.Column="2" IsHitTestVisible="False" Text="Invoice Number" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="12,0,0,0" Foreground="DarkGray">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=invoiceNoTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Button Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left"  Height="35" Width="100" Background="#1162FF" BorderThickness="0" FontFamily="Roboto"
                                    Command="{Binding SearchInvoiceClickedCommand}">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="7"/>
                                    </Style>
                                </Button.Resources>
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="LightGray"></DropShadowEffect>
                                </Button.Effect>
                                <Button.Content>Search</Button.Content>
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="#1162FF"/>
                                         
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>--> 
                          
                        </Grid>
                        <Grid Grid.Row="0" Margin="0 10 0 0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="470*" />
                                </Grid.ColumnDefinitions>
                                <ScrollViewer Grid.Column="0"
Margin="10,5,5,5"
HorizontalScrollBarVisibility="Auto"
VerticalScrollBarVisibility="Auto">
                                    <ContentControl DataContext="{Binding ElementName=PurchaseProductsDataGrid}" />
                                </ScrollViewer>
                                <DataGrid x:Name="PurchaseProductsDataGrid" Grid.Column="1" Margin="5" AutoGenerateColumns="False" 
                                          ItemsSource="{Binding PurchaseInvoiceSource, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                          SelectedItem="{Binding SelectedInvoiceRow, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"
                                          RowHeaderWidth="0" 
                                          Style="{DynamicResource MahApps.Styles.DataGrid.Azure}" IsReadOnly="True"
                                          HorizontalScrollBarVisibility="Auto" SelectionMode="Single"  CanUserAddRows="False" 
                                          VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header = "Inovice Date" Width="*" Binding = "{Binding Path=InvoiceDate,StringFormat={}{0:dd/MM/yyyy}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  />
                                        <DataGridTextColumn Header = "Invoice Number" Width="*"  Binding = "{Binding Path=InvoiceNo, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        <DataGridTextColumn Header = "Supplier Name" Width="*"  Binding = "{Binding Path=SupplierName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        <DataGridTextColumn Header = "Total Amount" Width="*"  Binding = "{Binding Path=TotalPurchaseAmount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        <DataGridTextColumn Header = "Amount Paid" Width="*"  Binding = "{Binding Path=AmountPaid, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        <DataGridTextColumn Header = "Balance" Width="*"  Binding = "{Binding Path=Balance, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                        <DataGridTemplateColumn Header="Details">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Command="{Binding DataContext.ViewInvoiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                            CommandParameter="{Binding}">
                                                        <Image Source="/Icons/bill.png"
                               Width="20" Height="20"/>
                                                    </Button> 
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

        </Grid> 
    </Grid>
</Page>
